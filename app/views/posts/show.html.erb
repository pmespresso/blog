
<div class="col-sm-10 col-sm-offset-1">

	<div id="post_content">
		<h1 @post.title class='lead' style='text-decoration: italic	; font-weight: bold; font-size: 30px;'>
			<%= @post.title %>
		</h1>
	<p class="date"> 
	  Submitted <%= time_ago_in_words(@post.created_at) %> Ago 
	  <% if user_signed_in? %> 
	    | <%= link_to 'Edit', edit_post_path(@post) %> | 
	    <%= link_to 'Delete', post_path(@post), method: :delete, data: { confirm: 'Are you sure?' } %> 
	  <% end %> 
	</p> 
	<br>
	<br>
		<p class="body lead">
		<h3> The Official Definition is: <%= @post.definition %></h3>
		<br />
		<h4> Usage Example: <%= @post.usage %> </h4>
		<br />
		<h4> Fabuness Rating: <%= @post.fabuness %> </h4>

		</p>
	 </div>		

		<div id="comments" class='well'>
		    <h2><%= @post.comments.count %> Comments</h2>
		    <%= render @post.comments %>
		 
		    <h3>Add a comment:</h3>
		    <%= render "comments/form" %>
		</div>
</div>